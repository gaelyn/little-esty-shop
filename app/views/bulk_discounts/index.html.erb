<h2><%= @merchant.name %>'s Bulk Discounts</h2>
<%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant), method: :get %>
<br>
<h3>All Discounts</h3>
<% @discounts.each do |discount| %>
  <section id="discount-<%= discount.id %>">
    <p>
      * Percentage Discount: <%= percent_to_integer(discount.percentage) %>% off,
      Quantity Threshold: <%= discount.minimum_quantity %>
      <%= link_to "See Discount", merchant_bulk_discount_path(@merchant.id, discount.id), method: :get %>
      <%= button_to "Delete Discount", merchant_bulk_discount_path(@merchant.id, discount.id), method: :delete %>
    </p>
  </section>
<% end %>

<h3>Upcoming Holidays</h3>
<p>* <%= @holidays[0][:localName] %> on <%= @holidays[0][:date] %></p>
<p>* <%= @holidays[1][:localName] %> on <%= @holidays[1][:date] %></p>
<p>* <%= @holidays[2][:localName] %> on <%= @holidays[2][:date] %></p>
